<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!--logger name="io.micronaut.http.server.netty.NettyHttpServer" level="debug"/-->
    <!--logger name="io.micronaut.cache" level="debug"/-->
    <!--logger name="io.micronaut.discovery.aws.parameterstore" level="TRACE" /-->

    <logger name="io.micronaut" level="INFO"/>
    <logger name="no.vy" level="INFO" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
